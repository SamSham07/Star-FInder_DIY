    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // --- Shopee Link ---
            const shopeeUrl = '#'; // Replace with your actual Shopee link
            document.getElementById('shopee-link').href = shopeeUrl;
            document.getElementById('shopee-link-2').href = shopeeUrl;

            // --- Leaflet Map Initialization ---
            const map = L.map('map').setView([4.2105, 101.9758], 7); 

            L.tileLayer('https://{s}.basemaps.cartocdn.com/rastertiles/voyager/{z}/{x}/{y}{r}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
                subdomains: 'abcd',
                maxZoom: 19
            }).addTo(map);

            const salesData = [
                { location: "Kuala Lumpur", lat: 3.1390, lng: 101.6869, sold: 150 },
                { location: "Penang", lat: 5.4164, lng: 100.3327, sold: 85 },
                { location: "Johor Bahru", lat: 1.4927, lng: 103.7414, sold: 120 },
                { location: "Kuching", lat: 1.5533, lng: 110.3438, sold: 70 },
                { location: "Kota Kinabalu", lat: 5.9804, lng: 116.0735, sold: 65 },
                { location: "Shah Alam", lat: 3.0738, lng: 101.5183, sold: 90 },
            ];

            salesData.forEach(data => {
                const starIcon = L.divIcon({
                    html: '⭐',
                    className: 'text-2xl',
                    iconSize: [24, 24],
                    iconAnchor: [12, 12]
                });
                const marker = L.marker([data.lat, data.lng], { icon: starIcon }).addTo(map);
                marker.bindPopup(`<b>${data.location}</b><br>Explorers here: ${data.sold}`);
            });

            // --- Contact Form Submission ---
            const form = document.getElementById('contact-form');
            const formMessage = document.getElementById('form-message');
            // IMPORTANT: Replace this with your actual Google Apps Script Web App URL
            const googleScriptURL = 'YOUR_GOOGLE_SCRIPT_URL_HERE';

            form.addEventListener('submit', function (e) {
                e.preventDefault();
                formMessage.textContent = 'Sending your coordinates to the mothership...';
                formMessage.className = 'mt-6 text-lg font-bold text-gray-600';

                const formData = new FormData(form);
                
                fetch(googleScriptURL, {
                    method: 'POST',
                    body: formData,
                })
                .then(response => response.json())
                .then(data => {
                    if (data.result === 'success') {
                        formMessage.textContent = 'Awesome! Your free star chart is zooming to your inbox!';
                        formMessage.className = 'mt-6 text-lg font-bold text-green-600';
                        form.reset();
                    } else {
                        throw new Error(data.error || 'Unknown error');
                    }
                })
                .catch(error => {
                    console.error('Error!', error.message);
                    formMessage.textContent = 'Uh oh! A black hole intercepted our message. Please try again!';
                    formMessage.className = 'mt-6 text-lg font-bold text-red-600';
                });
            });
        });
    </script>

